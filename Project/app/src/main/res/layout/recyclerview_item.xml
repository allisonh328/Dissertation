<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_orange_light"
    android:outlineAmbientShadowColor="@color/cardview_shadow_start_color">

    <TextView
        android:id="@+id/textView"
        style="@style/word_title"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_open"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_open"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:onClick="openPrototype"
        android:text="@string/open_button"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_delete"
        app:layout_constraintEnd_toStartOf="@+id/button_delete" />

    <Button
        android:id="@+id/button_delete"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:onClick="deletePrototype"
        android:text="@string/delete_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>